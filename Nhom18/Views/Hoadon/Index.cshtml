@model IEnumerable<Nhom18.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
}
@* <h1 class="iphonh1"> Hệ Thống Quản Lí Bán Đồ Điện Tử </h1> *@
<h2 style="text-align:center;"class="w3-animate-top">Danh sách Hoá đơn</h2>
<p>
    <a asp-action="Create" class="w3-btn w3-round-xxlarge w3-button w3-purple">Thêm Hoá đơn mới</a>
</p>
<table class="w3-table-all w3-card-4">
    <thead>
        <tr  class="w3-hover-black">
            <th>
                @Html.DisplayNameFor(model => model.MaHD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khachhang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sanpham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoluongHD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngayban)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="w3-hover-blue">
             <td>
                @Html.DisplayFor(modelItem => item.MaHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Khachhang.TenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sanpham.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoluongHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngayban)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaHD"class="w3-button w3-white w3-border w3-border-red w3-round-large" style=" font-weight: 700;">Sửa</a> 
                <a asp-action="Details" asp-route-id="@item.MaHD" class="w3-button w3-white w3-border w3-border-red w3-round-large" style=" font-weight: 700;">Thông Tin</a> 
                <a asp-action="Delete" asp-route-id="@item.MaHD" class="w3-button w3-white w3-border w3-border-red w3-round-large" style=" font-weight: 700;">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
