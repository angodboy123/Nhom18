@model Nhom18.Models.Nhaphang

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align:center;">Thông Tin</h1>

<h2>Nhập hàng</h2>
<hr />
<div >
    <div  class="w3-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IDNH" class="w3-text-teal"></label>
                <input asp-for="IDNH" class="w3-input w3-border w3-light-grey" value = "@ViewBag.newID"/>
                <span asp-validation-for="IDNH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSP" class="w3-text-teal">Tên Sản Phẩm</label>
                <select asp-for="TenSP" class ="form-control" asp-items="ViewBag.TenSP"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoluongSP" class="w3-text-teal">Số Lượng Sản Phẩm</label>
                <input asp-for="SoluongSP" class="w3-input w3-border w3-light-grey"/>
                <span asp-validation-for="SoluongSP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenNCC" class="w3-text-teal">Nhà Cung Cấp</label>
                <select asp-for="TenNCC" class ="form-control" asp-items="ViewBag.TenNCC"></select>
            </div>
            <div class="form-group">
                <label asp-for="TenNV" class="w3-text-teal">Tên Nhân Viên</label>
                <select asp-for="TenNV" class ="form-control" asp-items="ViewBag.TenNV"></select>
            </div>
            <div class="form-group">
                <label asp-for="NgaynhapSP" class="w3-text-teal">Ngày Nhập Sản Phẩm</label>
                <input asp-for="NgaynhapSP" class="w3-input w3-border w3-light-grey"/>
                <span asp-validation-for="NgaynhapSP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="w3-padding w3-display-bottommiddle">
    <a asp-action="Index" class="w3-btn w3-black" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
