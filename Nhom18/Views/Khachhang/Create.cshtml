@model Nhom18.Models.Khachhang

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align:center;">Thông Tin</h1>

<h2>Khách Hàng</h2>
<hr />
<div >
    <div  class="w3-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaKH" class="w3-text-teal">Mã Khách Hàng</label>
                <input asp-for="MaKH"  required="#" value = "@ViewBag.newID" class="w3-input w3-border w3-light-grey" />
                <span asp-validation-for="MaKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKH" class="w3-text-teal"></label>
                <input asp-for="TenKH" class="w3-input w3-border w3-light-grey" />
                <span asp-validation-for="TenKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaysinhKH" class="w3-text-teal"></label>
                <input asp-for="NgaysinhKH"   class="w3-input w3-border w3-light-grey" />
                <span asp-validation-for="NgaysinhKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiachiKH" class="w3-text-teal"></label>
                <input asp-for="DiachiKH" required="#"  class="w3-input w3-border w3-light-grey" />
                <span asp-validation-for="DiachiKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="w3-padding w3-display-bottommiddle">
    <a asp-action="Index" class="w3-btn w3-black" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
